<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Settings Section with a custom title layout -->
    <PreferenceCategory
        android:title="Settings"
        android:layout="@layout/preference_category_layout">

        <!-- Rolling Shutter Frequency Settings with Range 5-20 kHz -->
        <!-- Rolling Shutter Effect Settings -->
        <PreferenceCategory android:title="Rolling Shutter Effect Settings">
            <ListPreference
                android:key="rolling_shutter_frequency"
                android:title="Rolling Shutter Frequency"
                android:summary="Set the frequency for the rolling shutter effect"
                android:entries="@array/frequency_options"
                android:entryValues="@array/frequency_values"
                android:defaultValue="10" />

            <EditTextPreference
                android:key="rolling_shutter_row_step"
                android:title="Row Step"
                android:summary="Set the number of rows to process at a time (default is 5)"
                android:inputType="number"
                android:defaultValue="5" />

            <EditTextPreference
                android:key="rolling_shutter_shift_amount"
                android:title="Shift Amount"
                android:summary="Set the shift amount for the rolling shutter effect (default is 5)"
                android:inputType="number"
                android:defaultValue="5" />
        </PreferenceCategory>

        <!-- Lighting Mode Settings -->
        <ListPreference
            android:key="lighting_mode"
            android:title="Lighting Mode"
            android:summary="Choose between Low Light, High Light, or Normal"
            android:entries="@array/lighting_modes"
            android:entryValues="@array/lighting_mode_values"
            android:defaultValue="normal" />

        <!-- Flash Settings with blue switch -->
        <SwitchPreferenceCompat
            android:key="enable_flash"
            android:title="Enable Flash"
            android:defaultValue="false"
            android:summary="Turn on the flash during video capture"
            android:thumbTint="@color/blue"
            android:trackTint="@color/blue" />

    </PreferenceCategory>

</PreferenceScreen>
